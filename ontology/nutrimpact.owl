<?xml version="1.0"?>
<rdf:RDF
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:owl="http://www.w3.org/2002/07/owl#"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
    xmlns:nutr="nutrimpact.owl#">

    <owl:Ontology rdf:about="http://nutrimpact.org/ontologies/2025/v1/nutrimpact">
        <rdfs:label xml:lang="fr">Ontologie NutrImpact</rdfs:label>
        <rdfs:comment xml:lang="fr">Ontologie pour la modélisation des impacts environnementaux des fruits et légumes, intégrant les données de saisonnalité, les impacts CO2 et les indicateurs de qualité des données.</rdfs:comment>
    </owl:Ontology>

    <!-- Classes -->
    <owl:Class rdf:ID="Food">
        <rdfs:label xml:lang="fr">Aliment</rdfs:label>
    </owl:Class>

    <owl:Class rdf:ID="Fruit">
        <rdfs:subClassOf rdf:resource="#Food"/>
        <rdfs:label xml:lang="fr">Fruit</rdfs:label>
    </owl:Class>

    <owl:Class rdf:ID="Vegetable">
        <rdfs:subClassOf rdf:resource="#Food"/>
        <rdfs:label xml:lang="fr">Légume</rdfs:label>
    </owl:Class>

    <owl:Class rdf:ID="Month">
        <rdfs:label xml:lang="fr">Mois</rdfs:label>
        <rdfs:comment xml:lang="fr">Représente un mois de l'année pour la saisonnalité des aliments</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="Data">
        <rdfs:label xml:lang="fr">Donnée</rdfs:label>
    </owl:Class>

    <owl:Class rdf:ID="EnvironmentalData">
        <rdfs:subClassOf rdf:resource="#Data"/>
        <rdfs:label xml:lang="fr">Donnée Environnementale</rdfs:label>
    </owl:Class>

    <owl:Class rdf:ID="LifeCycleEnvData">
        <rdfs:subClassOf rdf:resource="#EnvironmentalData"/>
        <rdfs:label xml:lang="fr">Donnée Environnementale de Cycle de Vie</rdfs:label>
        <rdfs:comment xml:lang="fr">Données environnementales spécifiques à une étape du cycle de vie</rdfs:comment>
    </owl:Class>

    <owl:Class rdf:ID="LifeCycleStage">
        <rdfs:label xml:lang="fr">Étape du Cycle de Vie</rdfs:label>
        <rdfs:comment xml:lang="fr">Représente une étape dans le cycle de vie d'un aliment</rdfs:comment>
    </owl:Class>

    <!-- Propriétés -->
    <owl:DatatypeProperty rdf:ID="hasName">
        <rdfs:domain rdf:resource="#Food"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasCategory">
        <rdfs:domain rdf:resource="#Food"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasValue">
        <rdfs:domain rdf:resource="#Data"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasUnit">
        <rdfs:domain rdf:resource="#Data"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasDescription">
        <rdfs:domain rdf:resource="#Data"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasDQR">
        <rdfs:domain rdf:resource="#EnvironmentalData"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
        <rdfs:comment xml:lang="fr">Ce chiffre correspond au Data Quality Ratio (DQR), il indique le niveau de confiance que l'on peut avoir dans le score. Plus le DQR est proche de 1, plus la donnée est fiable ; plus la valeur se rapproche de 5, plus le score rend compte d'une incertitude importante. Une donnée avec un DQR >= 3 est considérée comme peu fiable.</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasMonthNumber">
        <rdfs:domain rdf:resource="#Month"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#int"/>
        <rdfs:comment xml:lang="fr">Numéro du mois (1-12)</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:DatatypeProperty rdf:ID="hasMonthFullName">
        <rdfs:domain rdf:resource="#Month"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:comment xml:lang="fr">Nom complet du mois en français</rdfs:comment>
    </owl:DatatypeProperty>

    <owl:ObjectProperty rdf:ID="hasEnvironmentalData">
        <rdfs:domain rdf:resource="#Food"/>
        <rdfs:range rdf:resource="#EnvironmentalData"/>
    </owl:ObjectProperty>

    <owl:ObjectProperty rdf:ID="isInSeasonDuring">
        <rdfs:domain rdf:resource="#Food"/>
        <rdfs:range rdf:resource="#Month"/>
        <rdfs:comment xml:lang="fr">Indique pendant quels mois un aliment est de saison</rdfs:comment>
    </owl:ObjectProperty>

    <!-- Propriété pour lier une donnée environnementale de cycle de vie à une étape -->
    <owl:ObjectProperty rdf:ID="hasLifeCycleStage">
        <rdfs:domain rdf:resource="#LifeCycleEnvData"/>
        <rdfs:range rdf:resource="#LifeCycleStage"/>
        <rdfs:comment xml:lang="fr">Lie une donnée environnementale de cycle de vie à son étape</rdfs:comment>
    </owl:ObjectProperty>

    <!-- Propriété pour lier données globales aux données détaillées par étape -->
    <owl:ObjectProperty rdf:ID="hasLifeCycleData">
        <rdfs:domain rdf:resource="#EnvironmentalData"/>
        <rdfs:range rdf:resource="#LifeCycleEnvData"/>
        <rdfs:comment xml:lang="fr">Lie une donnée environnementale globale à ses données détaillées par étape du cycle de vie</rdfs:comment>
    </owl:ObjectProperty>
</rdf:RDF>
